{
  "compilerOptions": {
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "noStrictGenericChecks": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "types": ["jest"]
  },
  "exclude": [
    "demo",
    "tools",
    "dist",
    "docs",
    "node_modules"
  ]
}
